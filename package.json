{
  "name": "openclaw-email-manager",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.2.0",
  "scripts": {
    "dev": "pnpm run dev:server & pnpm run dev:web",
    "dev:server": "tsx watch server/index.ts",
    "dev:web": "vite",
    "build": "pnpm run build:web && pnpm run build:server",
    "build:web": "vite build --outDir dist/client",
    "build:server": "tsc -p tsconfig.server.json",
    "lint": "eslint .",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/trpc-server": "^0.4.0",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@tanstack/react-query": "^5.66.8",
    "@tanstack/react-router": "^1.113.17",
    "@trpc/client": "^11.0.0-rc.732",
    "@trpc/react-query": "^11.0.0-rc.732",
    "@trpc/server": "^11.0.0-rc.732",
    "better-sqlite3": "^11.8.1",
    "consola": "^3.4.0",
    "drizzle-orm": "^0.40.0",
    "hono": "^4.6.17",
    "lucia": "^3.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitejs/plugin-react": "^4.4.1",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9.20.1",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "jsdom": "^26.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^3.0.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
